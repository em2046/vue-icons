@import "./prism-ghcolors.css"
@import "~@zeit-ui/themes/index.css"
@import "~@zeit-ui/themes/dark.css"

.zf-layout
  max-width 700px

.zf-card
  display inline-flex
  padding 18px
  justify-content center
  align-items center
  justify-self center
  align-self center
  width 60px
  height 60px
  background-color var(--geist-background)

.zf-grid
  display grid
  width 100%
  height 100%
  font-size 1rem
  grid-auto-rows minmax(100px, auto)
  grid-template-columns repeat(auto-fill, minmax(90px, 1fr))

.zf-title
  margin 10px 0
